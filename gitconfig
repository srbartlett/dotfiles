[alias]
	st = status
	ci = commit
	co = checkout
	br = branch
	sh = !git-sh
	sub = submodule
	up = !git pull && git submodule sync && git submodule init && git submodule update && git sub
	patch = format-patch --stdout
	show-branches = !git show-branch origin/master $(git branch | cut -c3-)
	root = rev-parse --show-toplevel
	ctags = !.git/hooks/ctags
        lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
[help]
          autocorrect = 1
[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
	showbranch = auto
	sh = auto
[color "branch"]
	current = green
	remote = cyan
[push]
	default = current
[color "status"]
	added = green
	changed = red
	untracked = cyan
[merge]
	tool = meld
[user]
	name = Stephen Bartlett
	email = stephenb@rtlett.org
[core]
	edit = vi
	editor = /usr/bin/vim

[init]
	templatedir = ~/.git_template
[http]
	sslVerify = false
